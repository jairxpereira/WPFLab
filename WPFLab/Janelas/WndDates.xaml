<Window x:Class="WPFLab.Janelas.WndDates"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFLab.Janelas"
        mc:Ignorable="d"
        Title="WndDates" Height="381" Width="401">
    <StackPanel>
        <Calendar x:Name="cal" HorizontalAlignment="Left" Margin="0,5,0,0"/>
        <DatePicker x:Name="odate" Margin="0,5,0,0"/>
        <Button x:Name="btnAction" Content="Teste de controles de data" Margin="0,5,0,0" Click="btnAction_onClick"/>
    </StackPanel>
</Window>
